<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'HelloRun - Virtual Running Events' %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <% if (locals.additionalCSS) { %>
    <% additionalCSS.forEach(css => { %>
      <link rel="stylesheet" href="<%= css %>">
    <% }); %>
  <% } %>
  <script src="https://unpkg.com/lucide@latest"></script>
  
  <!-- Google Analytics -->
  <% if (process.env.GA_MEASUREMENT_ID) { %>
  <script async src="https://www.googletagmanager.com/gtag/js?id=<%= process.env.GA_MEASUREMENT_ID %>"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '<%= process.env.GA_MEASUREMENT_ID %>');
  </script>
  <% } %>
</head>
<body>
  <%- include('./nav') %>
  
  <main>
    <%- body %>
  </main>
  
  <%- include('./footer') %>
  
  <script src="/js/main.js"></script>
  <% if (locals.additionalJS) { %>
    <% additionalJS.forEach(js => { %>
      <script src="<%= js %>"></script>
    <% }); %>
  <% } %>
  
  <script>
    lucide.createIcons();
  </script>
</body>
</html>