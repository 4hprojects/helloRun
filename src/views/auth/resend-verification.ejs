<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layouts/head', { title: 'Resend Verification - helloRun' }) %>
</head>
<body>
  <%- include('../layouts/nav') %>
  
  <main class="auth-page">
    <div class="auth-container">
      <div class="auth-card">
        <div class="auth-icon">
          <i data-lucide="mail-check"></i>
        </div>
        <h1>Resend Verification Email</h1>
        <p class="auth-subtitle">Enter your email address and we'll send you a new verification link.</p>
        
        <% if (locals.error) { %>
          <div class="alert alert-error">
            <i data-lucide="alert-circle"></i>
            <span><%= error %></span>
          </div>
        <% } %>
        
        <% if (locals.success) { %>
          <div class="alert alert-success">
            <i data-lucide="check-circle"></i>
            <span><%= success %></span>
          </div>
        <% } %>
        
        <form action="/resend-verification" method="POST" class="auth-form">
          <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" required placeholder="Enter your email">
          </div>
          
          <button type="submit" class="btn btn-full">Resend Verification Email</button>
        </form>
        
        <p class="auth-switch">
          Already verified? <a href="/login">Log in</a>
        </p>
      </div>
    </div>
  </main>
  
  <%- include('../layouts/footer') %>
  
  <script src="/js/main.js"></script>
  <script>
    lucide.createIcons();
  </script>
</body>
</html>