<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layouts/head', { title: 'Password Reset Successful - helloRun' }) %>
</head>
<body>
  <%- include('../layouts/nav') %>
  
  <main class="auth-page">
    <div class="auth-container">
      <div class="auth-card">
        <div class="auth-icon success">
          <i data-lucide="check-circle"></i>
        </div>
        <h1>Password Reset Successful!</h1>
        <p class="auth-subtitle">Your password has been successfully reset. You can now log in with your new password.</p>
        
        <div class="auth-actions">
          <a href="/login<%= locals.email ? '?email=' + encodeURIComponent(email) : '' %>" class="btn btn-full">Go to Login</a>
        </div>
      </div>
    </div>
  </main>
  
  <%- include('../layouts/footer') %>
  
  <script src="/js/main.js"></script>
  <script>
    lucide.createIcons();
  </script>
</body>
</html>